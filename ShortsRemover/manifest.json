{
    "name": "Shorts remover",
    "version": "1.0.1",
    "description": "Removes YouTube shorts features that annoy me",
    "icons":{
        "128":"128.png",
        "64": "64.png",
        "32": "32.png",
        "16": "16.png"
    },
    "manifest_version": 3,

    "content_scripts": [{
        "js": ["removeShorts.js"],
        "matches": ["https://www.youtube.com/*"]
    }],

    "browser_action": {
        "default_icon": "128.png"
      }

}